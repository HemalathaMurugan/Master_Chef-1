

<body>
<h1 class="text-left" style = "margin-left:160px"><%= @cook_book.name %></h1>
<p class="text-center"><%= link_to "Back to My Kitchen", user_path(@user)%>
<br>

<h4 class = "text-light" style = "margin-left:160px">What would you like to eat today?</h4>
<% @cook_book.recipes.each do |recipe| %>
  <p><ol style = "margin-left:120px"><h5 class = "text-primary"><%= link_to recipe.name, recipe_path(recipe) %> </h5>
  </ol>
<% end %>

<!-- <a href="/cook_books/<%= @cook_book.id%>/edit">Edit Cook Book</a> -->
<table style = "margin-left:160px">
<tr>
  <td>
  <%= button_to "Add new recipe", edit_cook_book_path,  method: :get, class: "btn btn-success" %><br>
  </td>
 <tr>
  <td>
  <%= form_for @cook_book, method: :delete do |form| %>
  <%= form.submit "Delete this cookbook" %> 
<% end %> 
  </td>
  </tr> 
</tr>
</table>
</body>