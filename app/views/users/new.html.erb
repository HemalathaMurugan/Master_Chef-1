<h1>Create A New User</h1>
<%= form_for @user do | form | %>
    <div class="form-group row">
        <div class ="col-auto">
            <p><%= form.label "Username" %></p>
            <%= form.text_field :username %>
        </div>
    </div>
  
    <div class="form-group row">   
        <div class ="col-auto">
            <p><%= form.label "Password" %></p>
            <%= form.password_field :password %>
        </div>
    </div>


    <div class="form-group row">   
        <div class ="col-auto">
            <p><%= form.label "Password Confirmation" %></p>
            <%= form.password_field :password_confirmation %>
        </div>
    </div>


    <div class="form-group">
        <h2><% form.label "Translator" %></h2>
        <p>Do you want to translate Chinese-language recipes into English?</p>
        <div class="custom-control custom-radio custom-control-inline">
            <p><%= form.radio_button :translator, "true" %>  Absolutely Yes!</p>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <p><%= form.radio_button :translator, "false" %>  No, I'm not bilingual.</p>
        </div>
    </div>
